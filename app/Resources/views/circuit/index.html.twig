{% extends 'base.html.twig' %}

{% block body %}
    <h1>Circuit list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Randonnees</th>
                <th>Velos</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for circuit in circuits %}
            <tr>
                <td><a href="{{ path('circuit_show', { 'id': circuit.id }) }}">{{ circuit.id }}</a></td>
                <td>{{ circuit.randonnees }}</td>
                <td>{{ circuit.velos }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('circuit_show', { 'id': circuit.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('circuit_edit', { 'id': circuit.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('circuit_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
