    <h1>progression</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ progression.id }}</td>
            </tr>
            <tr>
                <th>Statistiques</th>
                <td>{{ progression.statistiques }}</td>
            </tr>
            <tr>
